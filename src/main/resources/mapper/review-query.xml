<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.review.mapper">	

	<insert id="addReview" parameterType="hashmap">
		INSERT INTO reviews
		(review_id,review,score,user_id,content_id)
		VALUES(reviews_seq.nextVal,#{review},#{score},#{userId},#{contentId})
	</insert>
	
	<select id="showReview" parameterType="int" resultType="hashmap">
		SELECT
		r.review,r.score 
		FROM contents c
		JOIN reviews r ON(c.content_id=r.content_id)
		WHERE c.writer_id = #{VALUE}			
	</select>
	 
</mapper>











